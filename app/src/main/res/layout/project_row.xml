<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"
    android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/projectRowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droid_sans"
                android:text="WWWWWWWWWWWWWWWWWW"
                android:textColor="#d10f0f"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/projectRowEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/droid_sans"
                android:text="Owner:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/projectRowDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droid_sans"
                android:text="This is a description that explains what the sprint is about, and now I am running out of things to say, so I'll stop."
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/projectRowMoreIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more"
                android:padding="5dp"
                android:background="@android:color/transparent"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/projectRowCreatedDate"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/droid_sans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:text="Date Created: 02/24/18"
                    android:layout_alignParentLeft="true"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">


                    <ImageView
                        android:id="@+id/projectRowNumberOfMembersIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_member" />

                    <TextView
                        android:id="@+id/projectRowNumberOfMembers"
                        android:fontFamily="@font/droid_sans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#09c2ff"
                        android:layout_gravity="center"
                        android:text="2"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:id="@+id/projectRowNumberOfSprintsIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sprint_row"
                        />

                    <TextView
                        android:id="@+id/projectRowNumberOfSprints"
                        android:fontFamily="@font/droid_sans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#FA0101"
                        android:layout_gravity="center"
                        android:text="2" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>