<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/userStoryRowName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/droid_sans"
            android:text="Name of User Story"
            android:textColor="#424242"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <ImageButton
            android:id="@+id/userStoryRowDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginRight="20dp"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_white_24dp"
            />

        <ImageButton
            android:id="@+id/userStoryRowCompleted"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
    </android.widget.LinearLayout>


        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/droid_sans"
                android:text="Cost: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                />

            <TextView
                android:id="@+id/userStoryRowPoints"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-1"
                android:fontFamily="@font/droid_sans"
                android:text="1 point"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                />



    </android.widget.LinearLayout>

        <android.widget.LinearLayout
            android:id="@+id/userStoryRowAssignedToLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="17dp"
            android:paddingRight="10dp"
            >


            <ImageView
                android:id="@+id/userStoryRowIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sprint_row"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/userStoryAssignedToName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="-1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/droid_sans"
                android:text="hello"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                />



        </android.widget.LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#f1f1f1f1"/>

</android.support.v7.widget.CardView>