<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#f5f5f5"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/userStoryRowName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="Name of User Story"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <ImageButton
            android:id="@+id/userStoryRowDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginRight="20dp"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_white_24dp"
            />

        <ImageButton
            android:id="@+id/userStoryRowCompleted"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            />
    </android.widget.LinearLayout>


        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans"
                android:text="Cost: "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                />

            <TextView
                android:id="@+id/userStoryRowPoints"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="-1"
                android:fontFamily="@font/open_sans"
                android:text="1 point"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                />

    </android.widget.LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#f1cccccc"/>

    </LinearLayout>


</android.support.v7.widget.CardView>