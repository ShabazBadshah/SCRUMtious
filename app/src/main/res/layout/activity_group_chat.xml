<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="ca.mvp.scrumtious.scrumtious.view_impl.GroupChatActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/groupChatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/group_chat_message_input_bg_color"
        android:orientation="horizontal"
        android:padding="@dimen/group_chat_message_input_padding">

        <EditText
            android:id="@+id/groupChatMessageInput"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/group_chat_message_input_field_height"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="@string/group_chat_message_hint"
            android:inputType="textPersonName"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/groupChatSendBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/ic_send"/>
    </LinearLayout>


</LinearLayout>
