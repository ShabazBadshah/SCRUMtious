<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/sprintRowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/droid_sans"
            android:paddingBottom="5dp"
            android:text="Name of Sprint"
            android:textColor="#d10f0f"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/sprintRowDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_sans"
            android:paddingBottom="2dp"
            android:paddingTop="5dp"
            android:text="This is a description that explains what the sprint is about, and now I am running out of things to say,
so I'll stop."
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/sprintRowMoreIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_more"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sprintRowClockIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="5dp"
                android:src="@drawable/ic_clock"/>

            <TextView
                android:id="@+id/sprintRowStartToEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="7dp"
                android:fontFamily="@font/droid_sans"
                android:text="01/01/2018 to 01/25/2018"
                android:textColor="#757575"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/sprintRowCurrentSprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/droid_sans"
                android:text="(In Progress)"
                android:textColor="#09c2ff"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>