<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/sprintRowName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/droid_sans"
            android:text="Name of Sprint"
            android:textColor="#d10f0f"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/sprintRowDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_sans"
            android:text="This is a description that explains what the sprint is about, and now I am running out of things to say,
so I'll stop."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/sprintRowStartToEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/droid_sans"
            android:text="01/01/2018 to 01/25/2018"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginRight="7dp"/>

            <TextView
                android:id="@+id/sprintRowCurrentSprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droid_sans"
                android:text="(In Progress)"
                android:textColor="#09c2ff"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#e0e0e0" />



</android.support.v7.widget.CardView>