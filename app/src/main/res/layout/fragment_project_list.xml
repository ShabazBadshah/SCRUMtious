<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/project_list_top_padding"
             android:background="@color/project_list_screen_bg_color"
             tools:context="ca.mvp.scrumtious.scrumtious.view_impl.ProjectListFragment">
            <LinearLayout
                android:id="@+id/projectListLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:text="@string/filter_owned_projects_only"
                android:fontFamily="@font/droid_sans"
                android:gravity="center_vertical"
                android:textSize="14sp"
                />

            <Switch
                android:id="@+id/projectListSwitch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="false"/>
            </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/projectListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/projectListAddProjectBtn"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/projectListLinearLayout"
            android:paddingTop="@dimen/project_list_top_padding"
            >

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/projectListEmptyStateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:src="@drawable/frown"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#9B9B9B"
                android:layout_marginBottom="50dp"
                android:text="Looks like you have no projects."
                android:textSize="24sp" />
        </LinearLayout>



    <Button
        android:id="@+id/projectListAddProjectBtn"
        style="@style/Widget.AppCompat.Button"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="@string/add_project_btn_text"
        />

</RelativeLayout>
